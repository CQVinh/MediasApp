<Window x:Class="DoAnCuoiKy_Medias.View.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAnCuoiKy_Medias.View"
        xmlns:uc="clr-namespace:DoAnCuoiKy_Medias.UserControlMedias"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:domain="clr-namespace:DoAnCuoiKy_Medias.DomainAdmin"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        DataContext="{StaticResource AdminDashboardVM}"
        Name="adminDashboard"
        Title="AdminDashboard" Height="550" Width="1000">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" CommandParameter="{Binding ElementName=adminDashboard}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <uc:UserControlUC Grid.Row="0"></uc:UserControlUC>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="0,0,0,3" Margin="5,5,5,10">
                    <Grid >
                        <TextBlock>
                            <Hyperlink Command="{Binding DashboardCommand}" CommandParameter="{Binding ElementName=adminDashboard}">
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <materialDesign:PackIcon Kind="ViewDashboard" Foreground="White" Height="30" Width="30"/>
                                    <TextBlock Text="Dashboard" Foreground="White" FontSize="20" FontWeight="DemiBold" VerticalAlignment="Center"></TextBlock>
                                </StackPanel>
                                <Hyperlink.Style>
                                <Style TargetType="Hyperlink">
                                    <Setter Property="Foreground" Value="Transparent"></Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="Gray" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Hyperlink.Style>
                            </Hyperlink>
                        </TextBlock>
                    </Grid>
                </Border>
                <Grid Grid.Row="1" Margin="5">
                    <TextBlock>
                        <Hyperlink Command="{Binding UserListCommand}" CommandParameter="{Binding ElementName=adminDashboard}">
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <materialDesign:PackIcon Kind="ViewListOutline" Foreground="White" Height="30" Width="30"/>
                                <TextBlock Text="User List" Foreground="White" FontSize="20" FontWeight="DemiBold" VerticalAlignment="Center"></TextBlock>
                            </StackPanel>
                            <Hyperlink.Style>
                                <Style TargetType="Hyperlink">
                                    <Setter Property="Foreground" Value="Transparent"></Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="Gray" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Hyperlink.Style>
                        </Hyperlink>
                    </TextBlock>
                </Grid>
                <Grid Grid.Row="2" Margin="5">
                    <TextBlock>
                        <Hyperlink Command="{Binding MoviesListCommand}" CommandParameter="{Binding ElementName=adminDashboard}">
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <materialDesign:PackIcon Kind="PlaylistPlay" Foreground="White" Height="30" Width="30"/>
                                <TextBlock Text="Movies List" Foreground="White" FontSize="20" FontWeight="DemiBold" VerticalAlignment="Center"></TextBlock>
                            </StackPanel>
                            <Hyperlink.Style>
                                <Style TargetType="Hyperlink">
                                    <Setter Property="Foreground" Value="Transparent"></Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="Gray" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Hyperlink.Style>
                        </Hyperlink>
                    </TextBlock>
                </Grid>
                <Grid Grid.Row="3" Margin="5">
                    <TextBlock>
                        <Hyperlink Command="{Binding GenresListCommand}" CommandParameter="{Binding ElementName=adminDashboard}">
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <materialDesign:PackIcon Kind="FormatListBulleted" Foreground="White" Height="30" Width="30"/>
                                <TextBlock Text="Genres List" Foreground="White" FontSize="20" FontWeight="DemiBold" VerticalAlignment="Center"></TextBlock>
                            </StackPanel>
                            <Hyperlink.Style>
                                <Style TargetType="Hyperlink">
                                    <Setter Property="Foreground" Value="Transparent"></Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="Gray" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Hyperlink.Style>
                        </Hyperlink>
                    </TextBlock>
                </Grid>
                <Grid Grid.Row="4" Margin="5">
                    <TextBlock>
                        <Hyperlink Command="{Binding StatisticalCommand}" CommandParameter="{Binding ElementName=adminDashboard}">
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <materialDesign:PackIcon Kind="ChartAreaspline" Foreground="White" Height="30" Width="30"/>
                                <TextBlock Text="Statistical" Foreground="White" FontSize="20" FontWeight="DemiBold" VerticalAlignment="Center"></TextBlock>
                            </StackPanel>
                            <Hyperlink.Style>
                                <Style TargetType="Hyperlink">
                                    <Setter Property="Foreground" Value="Transparent"></Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="Gray" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Hyperlink.Style>
                        </Hyperlink>
                    </TextBlock>
                </Grid>
            </Grid>
            <Grid Grid.Column="1" Visibility="{Binding VisibilityDashboard}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Margin="20,10,20,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Dashboard" Foreground="White" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                    <materialDesign:PopupBox Grid.Column="1" PlacementMode="BottomAndAlignRightEdges" PopupMode="Click" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <materialDesign:PopupBox.ToggleContent>
                            <materialDesign:PackIcon Kind="AccountCircle" Background="Black" Foreground="White" Width="30" Height="30"/>
                        </materialDesign:PopupBox.ToggleContent>
                        <Grid Background="Black">
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Button Background="Transparent" Command="{Binding SignOutCommand}" CommandParameter="{Binding ElementName=adminDashboard}" BorderBrush="Transparent" Style="{StaticResource MaterialDesignRaisedDarkButton}" Margin="5">
                                <Button.Content>
                                    <TextBlock Text="Sign Out" Foreground="White" FontSize="12"></TextBlock>
                                </Button.Content>
                            </Button>
                        </Grid>
                    </materialDesign:PopupBox>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Command="{Binding UserListCommand}" CommandParameter="{Binding ElementName=adminDashboard}" Height="180" Width="250" BorderBrush="#FF2A2A2A" Background="#FF2A2A2A">
                        <Button.Content>
                            <Grid Height="180" Width="250" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.5*"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="User List" Foreground="LightGray" FontSize="20" FontWeight="DemiBold" VerticalAlignment="Bottom" HorizontalAlignment="Center"></TextBlock>
                                <materialDesign:PackIcon Grid.Row="1" Kind="ViewListOutline" Foreground="LightGray" Height="60" Width="60" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </Button.Content>
                    </Button>
                    <Button Grid.Row="1" Command="{Binding UserControlCommand}" CommandParameter="{Binding ElementName=adminDashboard}" Height="180" Width="250" Background="#FF2A2A2A" BorderBrush="#FF2A2A2A">
                        <Button.Content>
                            <Grid Height="180" Width="250" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.5*"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="User Control" Foreground="LightGray" FontSize="20" FontWeight="DemiBold" VerticalAlignment="Bottom" HorizontalAlignment="Center"></TextBlock>
                                <materialDesign:PackIcon Grid.Row="1" Kind="AccountSettings" Foreground="LightGray" Height="60" Width="60" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding MoviesListCommand}" CommandParameter="{Binding ElementName=adminDashboard}" Grid.Column="1" Height="180" Width="250" Background="#FF2A2A2A" BorderBrush="#FF2A2A2A">
                        <Button.Content>
                            <Grid Height="180" Width="250" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.5*"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Movie List" Foreground="LightGray" FontSize="20" FontWeight="DemiBold" VerticalAlignment="Bottom" HorizontalAlignment="Center"></TextBlock>
                                <materialDesign:PackIcon Grid.Row="1" Kind="PlaylistPlay" Foreground="LightGray" Height="60" Width="60" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding GenresListCommand}" CommandParameter="{Binding ElementName=adminDashboard}" Grid.Column="2" Height="180" Width="250" Background="#FF2A2A2A" BorderBrush="#FF2A2A2A">
                        <Button.Content>
                            <Grid Height="180" Width="250" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.5*"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Genres List" Foreground="LightGray" FontSize="20" FontWeight="DemiBold" VerticalAlignment="Bottom" HorizontalAlignment="Center"></TextBlock>
                                <materialDesign:PackIcon Grid.Row="1" Kind="FormatListBulleted" Foreground="LightGray" Height="60" Width="60" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding MoviesControlCommand}" CommandParameter="{Binding ElementName=adminDashboard}" Grid.Row="1" Grid.Column="1" Height="180" Width="250" Background="#FF2A2A2A" BorderBrush="#FF2A2A2A">
                        <Button.Content>
                            <Grid Height="180" Width="250" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.5*"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Movie Control" Foreground="LightGray" FontSize="20" FontWeight="DemiBold" VerticalAlignment="Bottom" HorizontalAlignment="Center"></TextBlock>
                                <materialDesign:PackIcon Grid.Row="1" Kind="MovieOpenSettings" Foreground="LightGray" Height="60" Width="60" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding StatisticalCommand}" CommandParameter="{Binding ElementName=adminDashboard}" Grid.Row="1" Grid.Column="2" Height="180" Width="250" Background="#FF2A2A2A" BorderBrush="#FF2A2A2A">
                        <Button.Content>
                            <Grid Height="180" Width="250" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.5*"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Statistical" Foreground="LightGray" FontSize="20" FontWeight="DemiBold" VerticalAlignment="Bottom" HorizontalAlignment="Center"></TextBlock>
                                <materialDesign:PackIcon Grid.Row="1" Kind="ChartAreaspline" Foreground="LightGray" Height="60" Width="60" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </Button.Content>
                    </Button>
                </Grid>
            </Grid>
            <Grid Grid.Column="1" Visibility="{Binding VisibilityUser}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Text="User List" Foreground="White" FontSize="30" Margin="20,10,0,10"></TextBlock>
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20,10,0,10">
                    <TextBlock Text="Search" Foreground="White" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0"></TextBlock>
                    <Border BorderBrush="White" BorderThickness="2" CornerRadius="2" Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Search" Foreground="White" VerticalAlignment="Center"></materialDesign:PackIcon>
                            <TextBox x:Name="user" Foreground="White" materialDesign:HintAssist.Hint="Search" materialDesign:TextFieldAssist.DecorationVisibility="Hidden" Width="400" Margin="10,0,0,0">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="TextChanged">
                                        <i:InvokeCommandAction Command="{Binding UserTextChangedCommand}" CommandParameter="{Binding ElementName=user}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <ListView Grid.Row="2" ItemsSource="{Binding AccountList}" SelectedItem="{Binding SelectedAccount}" ScrollViewer.VerticalScrollBarVisibility="Hidden" Margin="20">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Email" Width="250" DisplayMemberBinding="{Binding Email}"></GridViewColumn>
                            <GridViewColumn Header="Password" Width="200" DisplayMemberBinding="{Binding Password}"></GridViewColumn>
                            <GridViewColumn Header="Plan" Width="Auto">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Plan.NamePlan}"></TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <materialDesign:PopupBox PopupMode="MouseOver" HorizontalAlignment="Center">
                                            <materialDesign:PopupBox.ToggleContent>
                                                <materialDesign:PackIcon Kind="Eye" Foreground="Gray" Width="20" Height="20" HorizontalAlignment="Center"></materialDesign:PackIcon>
                                            </materialDesign:PopupBox.ToggleContent>
                                            <ListView ItemsSource="{Binding Profiles}">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Image Source="{Binding Avatar}" Width="20" Height="20"></Image>
                                                            <TextBlock Text="{Binding Name}" Margin="10,0,0,0"></TextBlock>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </materialDesign:PopupBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                                <GridViewColumnHeader Content="Profiles" Width="Auto"></GridViewColumnHeader>
                            </GridViewColumn>
                            <GridViewColumn>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <materialDesign:PopupBox PopupMode="MouseOver" HorizontalAlignment="Center">
                                            <materialDesign:PopupBox.ToggleContent>
                                                <materialDesign:PackIcon Kind="Eye" Foreground="Gray" Width="20" Height="20" HorizontalAlignment="Center"></materialDesign:PackIcon>
                                            </materialDesign:PopupBox.ToggleContent>
                                            <ListView ItemsSource="{Binding PaymentHistory}">
                                                <ListView.View>
                                                    <GridView>
                                                        <GridViewColumn Header="First Name" Width="Auto" DisplayMemberBinding="{Binding FirstName}"></GridViewColumn>
                                                        <GridViewColumn Header="Last Name" Width="Auto" DisplayMemberBinding="{Binding LastName}"></GridViewColumn>
                                                        <GridViewColumn Header="Card Number" Width="Auto" DisplayMemberBinding="{Binding CardNumber}"></GridViewColumn>
                                                        <GridViewColumn Header="Expiration Date" Width="Auto" DisplayMemberBinding="{Binding ExpirationDate}"></GridViewColumn>
                                                        <GridViewColumn Header="CVV" Width="Auto" DisplayMemberBinding="{Binding CVV}"></GridViewColumn>
                                                        <GridViewColumn Header="Date Of Payment" Width="Auto" DisplayMemberBinding="{Binding DateOfPayment}"></GridViewColumn>
                                                        <GridViewColumn Header="First Name" Width="Auto" DisplayMemberBinding="{Binding Plan.NamePlan}"></GridViewColumn>
                                                    </GridView>
                                                </ListView.View>
                                            </ListView>
                                        </materialDesign:PopupBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                                <GridViewColumnHeader Content="History Payment" Width="Auto"></GridViewColumnHeader>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Edit" Command="{Binding UserControlCommand}" CommandParameter="{Binding ElementName=adminDashboard}"></MenuItem>
                        </ContextMenu>
                    </ListView.ContextMenu>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Black" />
                                    <Setter Property="Background" Value="White" />
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Foreground" Value="Black" />
                                    <Setter Property="Background" Value="White" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
            <Grid Grid.Column="1" Visibility="{Binding VisibilityMovies}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Text="Movie List" Foreground="White" FontSize="30" Margin="20,10,0,10"></TextBlock>
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20,10,0,10">
                    <TextBlock Text="Search" Foreground="White" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0"></TextBlock>
                    <Border BorderBrush="White" BorderThickness="2" CornerRadius="2" Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Search" Foreground="White" VerticalAlignment="Center"></materialDesign:PackIcon>
                            <TextBox x:Name="movies" Foreground="White" materialDesign:HintAssist.Hint="Search" materialDesign:TextFieldAssist.DecorationVisibility="Hidden" Width="400" Margin="10,0,0,0">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="TextChanged">
                                        <i:InvokeCommandAction Command="{Binding MoviesTextChangedCommand}" CommandParameter="{Binding ElementName=movies}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <ListView Grid.Row="2" ItemsSource="{Binding MoviesList}" SelectedItem="{Binding SelectedMovies}" Margin="20">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding NameOfMovies}"></GridViewColumn>
                            <GridViewColumn Header="Description" Width="Auto" DisplayMemberBinding="{Binding Description}"></GridViewColumn>
                            <GridViewColumn Header="Date Of Issue" Width="Auto">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DateOfIssue}" HorizontalAlignment="Center"></TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Starring" Width="Auto" DisplayMemberBinding="{Binding Starring}"></GridViewColumn>
                            <GridViewColumn Header="Nation" Width="Auto">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Nation}" HorizontalAlignment="Center"></TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Image" Width="Auto" DisplayMemberBinding="{Binding Image}"></GridViewColumn>
                            <GridViewColumn Header="Video" Width="Auto" DisplayMemberBinding="{Binding Video}"></GridViewColumn>
                            <GridViewColumn Header="Rate" Width="Auto">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Rate}" HorizontalAlignment="Center"></TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Views" Width="Auto">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Views}" HorizontalAlignment="Center"></TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <materialDesign:PopupBox PopupMode="MouseOver" HorizontalAlignment="Center">
                                            <materialDesign:PopupBox.ToggleContent>
                                                <materialDesign:PackIcon Kind="Eye" Foreground="Gray" Width="20" Height="20" HorizontalAlignment="Center"></materialDesign:PackIcon>
                                            </materialDesign:PopupBox.ToggleContent>
                                            <ListView ItemsSource="{Binding GenresMovies}">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Genres.Name}"></TextBlock>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </materialDesign:PopupBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                                <GridViewColumnHeader Content="Genres"></GridViewColumnHeader>
                            </GridViewColumn>
                            <GridViewColumn>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <materialDesign:PopupBox PopupMode="MouseOver" HorizontalAlignment="Center">
                                            <materialDesign:PopupBox.ToggleContent>
                                                <materialDesign:PackIcon Kind="Eye" Foreground="Gray" Width="20" Height="20" HorizontalAlignment="Center"></materialDesign:PackIcon>
                                            </materialDesign:PopupBox.ToggleContent>
                                            <ListView ItemsSource="{Binding SubGenresMovies}">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding SubGenres.Name}"></TextBlock>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </materialDesign:PopupBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                                <GridViewColumnHeader Content="SubGenres"></GridViewColumnHeader>
                            </GridViewColumn>
                            <GridViewColumn Header="Key Word" Width="Auto" DisplayMemberBinding="{Binding NameSearch}"></GridViewColumn>
                        </GridView>
                    </ListView.View>
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Edit" Command="{Binding MoviesControlCommand}" CommandParameter="{Binding ElementName=adminDashboard}"></MenuItem>
                        </ContextMenu>
                    </ListView.ContextMenu>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Black" />
                                    <Setter Property="Background" Value="White" />
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Foreground" Value="Black" />
                                    <Setter Property="Background" Value="White" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
            <Grid Grid.Column="1" Visibility="{Binding VisibilityGenres}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Genres List" Foreground="White" FontSize="30" Margin="20,10,0,10"></TextBlock>
                    <TextBlock Grid.Column="1" Text="SubGenres List" Foreground="White" FontSize="30" Margin="20,10,0,10"></TextBlock>
                </Grid>
                <Grid Grid.Row="2" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Border Margin="0,0,5,0" BorderBrush="Gray" BorderThickness="3">
                        <ListView ItemsSource="{Binding GenresList}" SelectedItem="{Binding SelectedGenres}" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Name" Width="300" DisplayMemberBinding="{Binding Name}"></GridViewColumn>
                                </GridView>
                            </ListView.View>
                            <ListView.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Edit" Command="{Binding GenresControlCommand}" CommandParameter="{Binding ElementName=adminDashboard}"></MenuItem>
                                </ContextMenu>
                            </ListView.ContextMenu>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="Black" />
                                            <Setter Property="Background" Value="White" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Foreground" Value="Black" />
