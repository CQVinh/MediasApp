                                                                    <RowDefinition></RowDefinition>
                                                                    <RowDefinition></RowDefinition>
                                                                    <RowDefinition></RowDefinition>
                                                                    <RowDefinition></RowDefinition>
                                                                </Grid.RowDefinitions>
                                                                <MediaElement x:Name="moviesFL" Grid.Row="0" Source="{Binding Video}" Volume="0" Stretch="Fill" Visibility="Collapsed" LoadedBehavior="Stop"></MediaElement>
                                                                <Grid Grid.Row="1" Background="Black" Margin="0,5,0,0">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition></ColumnDefinition>
                                                                        <ColumnDefinition></ColumnDefinition>
                                                                        <ColumnDefinition></ColumnDefinition>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Button Grid.Column="0" Command="{Binding ElementName=lbFL, Path=DataContext.PlayMovies}" CommandParameter="{Binding}" Background="LightGray" BorderBrush="LightGray" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="95">
