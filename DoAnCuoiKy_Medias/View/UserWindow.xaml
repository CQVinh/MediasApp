                <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,20,0,10">
                    <TextBlock Text="NETCOMPLEX" Foreground="White" FontSize="15" FontWeight="Bold"></TextBlock>
                    <TextBlock Text="INTERACTIVE" Foreground="LightGray" FontSize="15" Margin="10,0,0,0"></TextBlock>
                </StackPanel>
                <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding NameOfMoviesMoreInfo}" FontSize="30" FontWeight="UltraBold" FontFamily="Algerian" Foreground="White" TextWrapping="Wrap"></TextBlock>
