                                                        <Setter TargetName="moviesFL" Property="Visibility" Value="Visible"></Setter>
                                                        <Setter TargetName="moviesFL" Property="LoadedBehavior" Value="Play"></Setter>
                                                        <Setter TargetName="moviesFL" Property="Height" Value="200"></Setter>
                                                        <Setter TargetName="moviesFL" Property="Width" Value="350"></Setter>
