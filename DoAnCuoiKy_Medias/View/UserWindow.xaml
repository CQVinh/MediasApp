                    <TextBlock Grid.Column="1" Text="{Binding SelectedMovies.Views}" Foreground="Gray" FontSize="14" TextWrapping="Wrap" Margin="10,0,0,0"></TextBlock>
                </Grid>
                <Grid Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
