                                    <TextBlock Grid.Column="1" Text="{Binding TotalMovies}" Foreground="White" FontSize="17"></TextBlock>
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Statistical Movies" Foreground="White" FontSize="20" HorizontalAlignment="Center"></TextBlock>
                                <lvc:PieChart Grid.Row="1" Series="{Binding PieChartSeries1}" Foreground="White" LegendLocation="Bottom"></lvc:PieChart>
                            </Grid>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Statistics By Revenue">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Payment List" Foreground="White" FontSize="20" HorizontalAlignment="Center"></TextBlock>
                                <Grid Grid.Row="1" Margin="0,10,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="From:" Foreground="White" FontSize="15" VerticalAlignment="Center" Margin="0,0,5,0"></TextBlock>
                                    <DatePicker Grid.Column="1" SelectedDate="{Binding SelectedFromDate}" Foreground="White" materialDesign:HintAssist.Hint="Select a date" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="To:" Foreground="White" FontSize="15" VerticalAlignment="Center" Margin="30,0,5,0"></TextBlock>
                                    <DatePicker Grid.Column="3" SelectedDate="{Binding SelectedToDate}" Foreground="White" materialDesign:HintAssist.Hint="Select a date" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" VerticalAlignment="Center"/>
                                    <Button Grid.Column="4" Command="{Binding ViewCommand}" Background="Transparent" BorderBrush="Gray" Style="{StaticResource MaterialDesignFlatDarkBgButton}" VerticalAlignment="Bottom" Margin="15,0,0,0">
                                        <Button.Content>
                                            <TextBlock Text="View"></TextBlock>
                                        </Button.Content>
                                    </Button>
                                </Grid>
                                <ListView Grid.Row="2" ItemsSource="{Binding PaymentHistoryList}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Date Of Payment" Width="Auto">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding DateOfPayment}" HorizontalAlignment="Center"></TextBlock>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header="Plan" Width="Auto">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Plan.NamePlan}" HorizontalAlignment="Center"></TextBlock>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header="Income" Width="Auto">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Plan.MonthlyPice}" HorizontalAlignment="Center"></TextBlock>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header="First Name" Width="Auto">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding FirstName}" HorizontalAlignment="Center"></TextBlock>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header="Last Name" Width="Auto">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding LastName}" HorizontalAlignment="Center"></TextBlock>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header="Card Number" Width="Auto" DisplayMemberBinding="{Binding CardNumber}"></GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="Black" />
                                                    <Setter Property="Background" Value="White" />
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Foreground" Value="Black" />
                                                    <Setter Property="Background" Value="White" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>
                                <Grid Grid.Row="3" Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Total Income:" Foreground="Red" FontSize="15" VerticalAlignment="Center" Margin="0,0,5,0"></TextBlock>
                                    <TextBlock Grid.Column="1" Text="{Binding TotalIncome}" Foreground="White" FontSize="17"></TextBlock>
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Statistics By Revenue" Foreground="White" FontSize="20" HorizontalAlignment="Center"></TextBlock>
                                <lvc:CartesianChart Grid.Row="1" Series="{Binding CartesianChartSeries}" Foreground="White" LegendLocation="Right">
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Title="Month" Labels="{Binding Labels}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis Title="Revenue"></lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>
                            </Grid>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Statistics Movies By Views">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Ranked List" Foreground="White" FontSize="20" HorizontalAlignment="Center"></TextBlock>
                                <ListView Grid.Row="1" ItemsSource="{Binding RankedListMovies}" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Image" Width="Auto">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Image Source="{Binding Image}" Stretch="Fill" Width="100" Height="60"></Image>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Header="Name" Width="Auto" DisplayMemberBinding="{Binding NameOfMovies}"></GridViewColumn>
                                            <GridViewColumn Header="Views" Width="Auto">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Views}" HorizontalAlignment="Center"></TextBlock>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="Black" />
                                                    <Setter Property="Background" Value="White" />
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Foreground" Value="Black" />
                                                    <Setter Property="Background" Value="White" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Statistics Movies By Views" Foreground="White" FontSize="20" HorizontalAlignment="Center"></TextBlock>
                                <lvc:PieChart Grid.Row="1" Series="{Binding PieChartSeries2}" Foreground="White" LegendLocation="Bottom"></lvc:PieChart>
                            </Grid>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Grid>
</Window>
