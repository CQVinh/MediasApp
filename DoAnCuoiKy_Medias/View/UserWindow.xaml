                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Button Grid.Row="0" Command="{Binding HomeCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Background="Transparent" BorderBrush="Transparent" Height="50">
                        <Button.Content>
                            <StackPanel>
                                <materialDesign:PackIcon Kind="HomeOutline" HorizontalAlignment="Center" Height="25" Width="25"/>
                                <TextBlock Text="Home" FontSize="10" HorizontalAlignment="Center"></TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Grid.Row="1" Command="{Binding MyListCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Background="Transparent" BorderBrush="Transparent" Height="50">
                        <Button.Content>
                            <StackPanel>
                                <materialDesign:PackIcon Kind="PlayBoxMultiple" HorizontalAlignment="Center" Height="25" Width="25"/>
                                <TextBlock Text="My List" FontSize="10" HorizontalAlignment="Center"></TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Grid.Row="2" Command="{Binding LikedListCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Background="Transparent" BorderBrush="Transparent" Height="50">
