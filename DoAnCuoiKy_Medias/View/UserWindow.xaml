                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} | {1}">
                            <Binding Path="SelectedMovies.DateOfIssue"></Binding>
                            <Binding Path="SelectedMovies.Nation"></Binding>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock Grid.Row="3" Text="{Binding SelectedMovies.Description}" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="Gray" FontSize="15" TextWrapping="Wrap" Margin="10,0,0,10"></TextBlock>
