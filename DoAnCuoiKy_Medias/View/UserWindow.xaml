                                                                            </StackPanel>
                                                                        </Button.Content>
                                                                    </Button>
                                                                    <Button Grid.Column="2" BorderBrush="White" Command="{Binding ElementName=lbFL, Path=DataContext.MoreInfoCommand}" CommandParameter="{Binding}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="95">
