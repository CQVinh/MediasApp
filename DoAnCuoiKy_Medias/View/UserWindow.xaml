                            <StackPanel>
                                <materialDesign:PackIcon Kind="ThumbUp" HorizontalAlignment="Center" Height="25" Width="25"/>
                                <TextBlock Text="Liked" FontSize="10" HorizontalAlignment="Center"></TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Grid.Row="3" Command="{Binding HistoryCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Background="Transparent" BorderBrush="Transparent" Height="50">
                        <Button.Content>
                            <StackPanel>
                                <materialDesign:PackIcon Kind="History" HorizontalAlignment="Center" Height="25" Width="25"/>
                                <TextBlock Text="History" FontSize="10" HorizontalAlignment="Center"></TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Visibility="{Binding MoreInfoMain}">
            <Grid.Background>
                <SolidColorBrush Opacity="0.5" Color="Black"></SolidColorBrush>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="120,0,120,0">
                <Image Source="{Binding SelectedMovies.Image}" Stretch="Fill"></Image>
                <Button Grid.Column="2" Background="Transparent" BorderBrush="Transparent" Command="{Binding CloseMoreInfoCommand}" CommandParameter="{Binding ElementName=userWindow}" HorizontalAlignment="Right" VerticalAlignment="Top" Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}">
                    <Button.Content>
                        <materialDesign:PackIcon Kind="CloseCircle" Height="25" Width="25"/>
                    </Button.Content>
                </Button>
            </Grid>
            <Grid Grid.Row="0" Width="450" HorizontalAlignment="Left" Margin="150,0,150,0">
                <Grid.Background>
                    <SolidColorBrush Opacity="0.7" Color="Black"></SolidColorBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
